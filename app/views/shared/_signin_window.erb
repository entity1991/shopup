<div id="signin_window">
  <h3 class="center">Sign in</h3>
  <%= form_for(:session, :url => sessions_path) do |f| %>
    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.submit "Sign in" %>
    </div>
  <% end %>
  <p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>