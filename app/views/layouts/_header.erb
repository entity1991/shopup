<div id="header">
  <% if signed_in?%>
    <div class="float_l">
      <% if current_user.stores.count == 0%>
        <%= link_to "Create your stores now!", new_admin_store_path %>
      <% else %>
        <%= link_to "Go to your store now!", "#", :id => "stores_list_toggler"%>
      <% end %>
    </div>
  <% end %>

  <div class="float_r">
    <%= link_to t('Home'), root_path %>
    <%= link_to t('Help'), help_path %>
    <%= link_to "Cart", carts_path %>
    <% if signed_in?%>
      <%= link_to t('Profile'), profile_path %>
      <%= link_to t('Sign_out'), signout_path, :method => :delete %>
    <% else %>
      <%= link_to_function t('Sign_in'), "toggleSigninWindow()", :id => "signin_window_toggler"%>
      <%= link_to t('Sign_up'), signup_path %>
    <% end %>
  </div>
</div>
<% if signed_in?%>
  <div id="stores_list">
    <% current_user.stores.each do |store| %>
      <%= link_to store.name, admin_store_path(store), :id =>
          ("active_store" if store.id.to_s == (params[:store_id] ? params[:store_id] : params[:id])) %>
    <% end %>
    <%= link_to "+", new_admin_store_path, :id => "new_store" %>
  </div>
<% end %>


