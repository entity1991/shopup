<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <%= csrf_meta_tag %>
</head>
<body>
  <%= render 'layouts/header'%>
  <div id="main">
    <%= render 'layouts/menu' if signed_in?%>
    <div id="content">
      <%= render 'shared/flash_messages'%>
      <%= yield  %>
      <div class="cleaner"></div>
    </div>
  </div>
  <div id="footer" class="cleaner"><%= render 'layouts/footer' %></div>
  <%= render 'layouts/styles_&_scripts' %>
</body>
</html>