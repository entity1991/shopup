<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <%= csrf_meta_tag %>
  <%= render 'layouts/admin/styles_&_scripts' %>
</head>
<body>
  <%= render 'layouts/admin/header'%>
  <div id="main">
    <div class="flash_box">
      <%= render 'shared/flash_messages'%>
    </div>
    <%= render 'admin/stores/store_managing_menu' unless (params[:controller] == "admin/stores" and params[:action] == "new")%>
    <%= yield  %>
    <div class="cleaner"></div>
  </div>
  <div id="footer" class="cleaner"><%= render 'layouts/admin/footer' %></div>
</body>
</html>