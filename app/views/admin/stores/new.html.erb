<h1>It is simple. Just type following fields...</h1>

<%= form_for([:admin, @store]) do |f| %>
  <div class="form_fields">
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :domain %>
      <%= f.text_field :domain %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  </div>
  <span class="error_messages"><%= render 'shared/error_messages', :object => f.object %></span>
<% end %>

