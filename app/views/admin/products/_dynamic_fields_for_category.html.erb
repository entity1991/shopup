<% fields.each do |field| %>
    <% field_name = "fields["+field[:model].id.to_s+"]" %>
    <% value = field[:content]%>

    <%= label_tag field[:model].title %>

    <% if field[:model].content_type == "string" %>
        <%= text_field_tag field_name, value%>
    <% elsif field[:model].content_type == "integer" %>
        <%= text_field_tag field_name, value %>
    <% elsif field[:model].content_type == "price" %>
        <%= text_field_tag field_name, value %>
    <% elsif field[:model].content_type == "color" %>
        <%= text_field_tag field_name, value %>
    <% end %>
<% end %>